{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "esModuleInterop": true,
    "paths": {
      "@candulabs/craft-core": ["packages/core/src/index"],
      "@candulabs/craft-core/*": ["packages/core/src/*"],
      "@candulabs/craft-layers": ["packages/layers/src/index"],
      "@candulabs/craft-utils": ["packages/utils/src/index"],
      "@candulabs/craft-utils/*": ["packages/utils/src/*"]
    }
  },
  "exclude": ["**/node_modules/**"]
}
